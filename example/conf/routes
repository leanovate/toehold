# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

POST        /*path.php           controllers.FastCGIController.serve(documentRoot = "./app-php", path, extension = ".php")
GET         /*path.php           controllers.FastCGIController.serve(documentRoot = "./app-php", path, extension = ".php")

GET         /*path               controllers.FileAssetsController.file(documentRoot = "./app-php", path)